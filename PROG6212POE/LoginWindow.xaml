<Window x:Class="PROG6212POE.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6212POE"
        mc:Ignorable="d"
       Title="Login" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="UserName:" Grid.Row="0" Margin="0,5"/>
        <TextBox x:Name="txtUsername"  Grid.Row="1" Margin="0,5" />
        <TextBlock Text="Password:" Grid.Row="2" Margin="0,5"/>
        <PasswordBox x:Name="txtPassword"  Grid.Row="3" Margin="0,5,0,30" />
        <Button Content="Login" Click="Login_Click" Grid.Row="3" Margin="130,50,0,-10" Width="100" HorizontalAlignment="Left" />
        <Button Content="Register" Click="Registration_Click" Grid.Row="3" Margin="130,89,0,-49" Width="100" HorizontalAlignment="Left" />
        <TextBlock x:Name="lblMessage" Grid.Row="3" Foreground="Red" Margin="0,138,0,-95" />
    </Grid>
</Window>